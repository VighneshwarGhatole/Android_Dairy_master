<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/con_theme"
        android:padding="@dimen/padding_margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_d_name"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_litre"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_avg_fat"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_avg_snf"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_price"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_chilling_ex"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_other_ex"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/padding_margin_2"
            android:text="@string/hint_total"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/font_size_11"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/padding_margin_2"
        android:background="@color/black_overlay" />


</LinearLayout>