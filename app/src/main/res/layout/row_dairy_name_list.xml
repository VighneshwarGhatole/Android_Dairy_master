<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_margin_2"
    android:paddingLeft="@dimen/padding_margin_10"
    android:paddingRight="@dimen/padding_margin_10"
    android:paddingTop="@dimen/padding_margin_2">

    <TextView
        android:id="@+id/dairy_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code : 234"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_14"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dairy_name_tv"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/dairy_care_by_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_weight="1"
            android:lines="1"
            android:gravity="left"
            android:text="Mohsin Tarik"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15" />

        <TextView
            android:id="@+id/dairy_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_weight="1"
            android:gravity="right"
            android:lines="1"
            android:text="Mohsin Tarik"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_15" />
    </LinearLayout>


    <TextView
        android:id="@+id/dairy_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_weight="1"
        android:gravity="left"
        android:text="+91439833283832"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_15" />


    <TextView
        android:id="@+id/time_stamp_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginBottom="@dimen/padding_margin_5"
        android:gravity="right"
        android:text="Type"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/font_size_12"
        android:textStyle="bold" />
</LinearLayout>