<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:orientation="vertical"
    android:padding="@dimen/padding_margin_10"
    >


    <TextView
        android:id="@+id/pro_dairy_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:padding="@dimen/padding_margin_10"
        android:text="Dairy Name"
        android:textColor="@color/my_black"
        android:textSize="@dimen/font_size_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/pro_dairy_ltr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="Total Litre"
            android:textColor="@color/my_black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/pro_dairy_avg_fat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="Avg Fat"
            android:textColor="@color/my_black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/pro_dairy_avg_snf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="Avg Snf"
            android:textColor="@color/my_black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/pro_dairy_avg_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="Avg Price"
            android:textColor="@color/my_black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/pro_dairy_clr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="Total Litre"
            android:textColor="@color/my_black"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/pro_dairy_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="Avg Fat"
            android:textColor="@color/my_black"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>


</LinearLayout>